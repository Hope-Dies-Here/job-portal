        <!-- Hero Section -->
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                Find Your Dream Job Today
            </h1>
            <p class="text-xl text-gray-600">
