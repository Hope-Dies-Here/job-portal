<div class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow">
    <div class="flex justify-between">
        <div class="flex-1">
            <div class="flex items-start justify-between">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">
                        <a href="/jobs/<%= job.id %>" class="hover:text-indigo-600">
                            <%= job.location %>
                        </a>
                    </h3>
                    <p class="text-gray-600"><%= job.company %></p>
                </div>
                <button class="text-gray-400 hover:text-gray-600 p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"/></svg>
                </button>
            </div>
            <div class="flex flex-wrap gap-4 mt-4 text-sm text-gray-600">
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5 7 13 7 13s7-8 7-13c0-3.87-3.13-7-7-7z"/>
                        <circle cx="12" cy="9" r="3"/>
                      </svg>
                    <%= job.location %>
                </div>
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                    <%= job.type %>
                </div>
                <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    <%= job.postedTime %>
                </div>
            </div>
            <div class="flex flex-wrap gap-2 mt-4">
                <% console.log(job) %>
                <% const categories = job.categories === null ? [] : job.categories.split(', '); %>
                <% categories.forEach(function(tag) { %>
                    <span class="bg-gray-100 text-indigo-800 text-xs px-2.5 py-1 rounded-md font-semibold">
                        <%= tag %>
                    </span>
                <% }); %>
            </div>
            <p class="mt-4 text-sm text-gray-600 line-clamp-2">
                <%= job.description %>
            </p>
        </div>
    </div>
    <div class="flex items-center justify-end gap-4 mt-6">
        <a href="/jobs/<%= job.id %>" class="border border-gray-200 bg-white text-gray-700 hover:bg-gray-50 px-4 py-2 rounded-md text-sm font-bold">
            Learn More
        </a>
        <a href="/jobs/<%= job.id %>/apply" class="bg-white shadow text-indigo-600 hover:text-indigo-600 hover:bg-gray-50 px-4 py-2 rounded-md text-sm font-bold">
            Apply Now
        </a>
    </div>
</div>

