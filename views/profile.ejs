          targetButton = document.querySelector('.tab-button');
        }
        targetButton.classList.add("active");
        
        
      if(!targetTab) {
        targetTab = document.querySelector('#profile');
      }

      targetTab.classList.add('current');
      targetTab.classList.remove("hidden");



        const tabButtons = document.querySelectorAll(".tab-button");

        tabButtons.forEach((button) => {
          button.addEventListener("click", function () {
            // Remove active class from all buttons
            tabButtons.forEach((btn) => btn.classList.remove("active"));

            // Add active class to clicked button
            this.classList.add("active");
            const id = this.getAttribute("data-tab");
            const tabContent = document.getElementById(id);
            const oldContent = document.getElementsByClassName("current")[0];

            oldContent.classList.add("hidden");
            oldContent.classList.remove("current");

            tabContent.classList.remove("hidden");
            tabContent.classList.add("current");

            const url = new URL(window.location);
            url.searchParams.set("tab", id);
            window.history.pushState({}, "", url);

            // Here you would typically show/hide content based on the selected tab
            // For demonstration purposes, we're just changing the button styles
          });
