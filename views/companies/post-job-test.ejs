  <!-- JavaScript for Company Form and Search -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Elements
      const companySelect = document.getElementById('company-select');
      const companySearchInput = document.getElementById('company-search');
      const companyModal = document.getElementById('company-modal');
      const closeModalBtn = document.getElementById('close-modal');
      const saveCompanyBtn = document.getElementById('save-company-btn');

      // Show modal when "Add New Company" is selected
      if (companySelect) {
        companySelect.addEventListener('change', function() {
          if (this.value === 'new') {
            companyModal.classList.add('active');
            document.body.style.overflow = 'hidden'; // Prevent scrolling when modal is open
          }
        });
      }

      // Close modal
      if (closeModalBtn) {
        closeModalBtn.addEventListener('click', function() {
          companyModal.classList.remove('active');
          document.body.style.overflow = ''; // Re-enable scrolling
          companySelect.value = ''; // Reset dropdown selection
        });
      }

      // Close modal when clicking outside
      if (companyModal) {
        companyModal.addEventListener('click', function(e) {
          if (e.target === companyModal) {
            companyModal.classList.remove('active');
            document.body.style.overflow = '';
            companySelect.value = '';
          }
        });
      }

      // Save company functionality
      if (saveCompanyBtn) {
        saveCompanyBtn.addEventListener('click', async function() {
          const companyName = document.getElementById('company-name').value;
          const companyWebsite = document.getElementById('company-website').value;
          const companyIndustry = document.getElementById('company-industry').value;
          const companySize = document.getElementById('company-size').value;
          const companyLocation = document.getElementById('company-location').value;
          const companyDescription = document.getElementById('company-description').value;
          const companyImage = document.getElementById('company-image').files[0];
          const companyEmail = document.getElementById('company-email').value;
          const companyData = {
            name: companyName,
            email: companyEmail,
            website: companyWebsite,
            industry: companyIndustry,
            size: companySize,
            location: companyLocation,
            description: companyDescription,
            image: companyImage
          };
          // Validate required fields

          if (!companyName) {
            alert('Company name is required');
            return;
          }

          // Here you would typically make an AJAX call to save the company
          // For demonstration, we'll simulate adding it to the dropdown


          const response = await fetch('http://localhost:3002/companies/register', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(companyData)
          });
          const data = await response.json();
          if (!data.success) {
            alert('Error adding company: ' + data.message);
            return;
          }

          // Create a new option with a temporary ID
          const newOption = document.createElement('option');
          newOption.value = data.companies[data.companies.length - 1].id // Temporary ID
          newOption.text = data.companies[data.companies.length - 1].name; // Use the name from the response


          // Insert before the "Add New Company" option
          const addNewOption = companySelect.querySelector('option[value="new"]');
          companySelect.insertBefore(newOption, addNewOption);

          // Select the new company
          companySelect.value = newOption.value;

          // Close the modal
          companyModal.classList.remove('active');
          document.body.style.overflow = '';

          // Show success message
          alert('Company added successfully!');
        });
      }

      // Company search functionality
      if (companySearchInput && companySelect) {
        companySearchInput.addEventListener('input', function() {
          const searchTerm = this.value.toLowerCase();
          const options = Array.from(companySelect.options);

          options.forEach(option => {
            // Skip the "Select a company" and "Add New Company" options
            if (option.value === '' || option.value === 'new') return;

            const text = option.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
              option.style.display = '';
            } else {
              option.style.display = 'none';
            }
          });
        });
      }

      const form = document.getElementById("post-job-form");
      form.addEventListener("submit", async (e) => {
        e.preventDefault()
        const formData = new FormData(form);
        const formDataObject = {};

        formData.forEach((value, key) => {
          const cleanKey = key.replace(/\[\]$/, '');
          if (formDataObject[cleanKey]) {
            if (Array.isArray(formDataObject[cleanKey])) {
              formDataObject[cleanKey].push(value);
            } else {
              formDataObject[cleanKey] = [formDataObject[cleanKey], value];
            }
          } else {
            formDataObject[cleanKey] = value;
          }
        });



        const response = await fetch("http://localhost:3002/jobs/post", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(formDataObject)
        })
        const {
          success,
          message
        } = await response.json();
        if (success) {
          alert("Job posted successfully!");
          //   window.location.href = "/jobs";
        } else {
          alert("Error posting job: " + message);
        }
      })
    });
  </script>
